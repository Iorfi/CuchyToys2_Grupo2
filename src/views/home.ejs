<!DOCTYPE html>
<html lang="es">
<head>
    <%- include ("./partials/head") %>
    <title>Home </title>
</head>
<body>

    <%- include ("./partials/header.ejs") %>

    <main> 
            <!-- Slideshow container -->
        <div class="slideshow-container">

            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">
              <div class="numbertext">1 / 3</div>
              <img src="https://plei-17fff.kxcdn.com/wp-content/uploads/2019/09/juguete-didactico.jpg" alt='carousel1' style="width:100%">
              <div class="text">Caption Text</div>
            </div>
          
            <div class="mySlides fade">
              <div class="numbertext">2 / 3</div>
              <img src="https://plei-17fff.kxcdn.com/wp-content/uploads/2019/09/juguetes-didactico.jpg" alt='carousel2' style="width:100%">
              <div class="text">Caption Two</div>
            </div>
          
            <div class="mySlides fade">
              <div class="numbertext">3 / 3</div>
              <img src="https://plei-17fff.kxcdn.com/wp-content/uploads/2019/09/juguetes-didacticos.jpg" alt='carousel3' style="width:100%">
              <div class="text">Caption Three</div>
            </div>
          
            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
          </div>
          <br>
          
          <!-- The dots/circles -->
          <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>
     
     <script>
                        var slideIndex = 1;
                        showSlides(slideIndex);
                        
                        function plusSlides(n) {
                          showSlides(slideIndex += n);
                        }
                        
                        function currentSlide(n) {
                          showSlides(slideIndex = n);
                        }
                        
                        function showSlides(n) {
                          var i;
                          var slides = document.getElementsByClassName("mySlides");
                          var dots = document.getElementsByClassName("dot");
                          if (n > slides.length) {slideIndex = 1}    
                          if (n < 1) {slideIndex = slides.length}
                          for (i = 0; i < slides.length; i++) {
                              slides[i].style.display = "none";  
                          }
                          for (i = 0; i < dots.length; i++) {
                              dots[i].className = dots[i].className.replace(" active", "");
                          }
                          slides[slideIndex-1].style.display = "block";  
                          dots[slideIndex-1].className += " active";
                        }
        </script>
        <!-- Navbar central -->

                <div class="nav-body" >  
                        <div class = "circuloSeparadorA"> </div> 
                        <a href = "/" class = "contNavA"> <h4> Juguetes destacados </h4> </a>
                        <div class = "circuloSeparadorA"> </div>
                        <a href = "/oferta" class = "contrNavA"> <h4> Ofertas </h4> </a>
                        <div class = "circuloSeparadorA"> </div>
                        <a href = "" class = "contNavB"> <h4> Envios </h4> </a>
                </DIV> 
            
                <!-- Section Articles -->
                <section>
                        <div class="products">
                                <% for (i = 0 ; i < products.length ; i++) { %>
                                    <div class = "prodPart">
                                            <div class = "prodPartA">
                                                <a href="/products/detalleDeProducto/<%-products[i].ID%>">  </a>
                                                <img src="/images/products/<%-products[i].IMAGE%>" class="product_img">
                                            </div>
                                            <div class = "prodPartB">
                                                <i class="fas fa-truck"></i>
                                                <p class= "information"><%-products[i].NAME %></p>
                                                <p class="price">$<%-products[i].PRICE %></p>
                                                <% if(products[i].DISCOUNT != null ) {%>
                                                <p class="discount"><%-products[i].DISCOUNT %>% off</p> 
                                                <% }%>
                                                <h4 class= "information"><%-products[i].DESCRIPTION %></h4>
                                            </div>
                                    </div>

                                <% } %>
                            
                        </div>  
                    </section>
                    
    </main>

    <%- include ("./partials/footer") %>

</body>
</html> 